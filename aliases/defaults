alias grep="grep --color"
alias egrep="egrep --color"
alias less="less -Xr"

alias tailf="tail -f"
alias l="ls"
alias la="ls -a"
alias ll="ls -lah"
alias ls="ls -G"
alias o="open"
alias desk="cd ~/Desktop/"
alias ~="cd ~/"
alias ..="cd ../"
alias ...="cd ../../"
alias server="open http://localhost:8000 && python -m SimpleHTTPServer"
alias filecount="ls -l | grep -v ^l | wc -l"

# secure movements and commands
alias mv="mv -i"
alias cp="cp -i"
alias rm="rm -i"

# Docker
alias d="docker"
alias dc="docker-compose"
alias dm="docker-machine"
